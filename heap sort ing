void swap(int* a, int* b) {

	int temp = *a;
	*a = *b;
	*b = temp;

}

void print(int a[], int n) {

	int i;
	for (i = 0; i < n; i++) {
		printf("%4d", a[i]);
	}
	printf("\n");

}

void heapify(int arr[], int n) {
	int i;
	//this code is just only for finding a max value.
	for (i = (n - 1) / 2; i >= 0; i--) {

		int left = 2 * i + 1;
		int right = 2 * i + 2;

		if (arr[left] > arr[i])
			swap(&arr[i], &arr[left]);

		if ( arr[right] > arr[i])
			swap(&arr[i], &arr[right]);
	
	}
}

void heap_sort(int a[],int n){


	for (int i = n - 1; i > 0; i--) {
		heapify(a, i);
		swap(&a[0], &a[i]);

		
	}

}






int main() {


	int arr[11] = { 11, 9, 7, 21, 5, 4, 23, 2, 1, 14, 16 };


	//heapify(arr, 11);
	heap_sort(arr, 11);
	print(arr, 11);

	}
