#include <stdio.h>
#include <stdlib.h>
#include <string.h>






int searching(char* arr, char* pattern) {

	//the valuable points out arr.
	int pa = 0;
	// the valuable points out pattern
	int pp = 0;
	int counter = 1;
	while (arr[pa] != NULL) {// 검색이 실패하면 pa값을 증가시키면서 비교를하니까.



	

		if (arr[pa] == pattern[pp])
		{
			pa++;
			pp++;
		}
		else
		{
			pa = counter++; //이것도 문제 ,
			pp = 0; // 왜냐하면 검사가 실패한 시점에서 , 다시 검색값을 0으로 돌려줘야 . 다시 검사체크를 한다. 틀림, 근데 왜 돌아갔지?
		}
		if (pattern[pp] == NULL)
			return pa - 1;//후위 연산잔로 +1을 해주기 떄문에 , +1이 다시 들어오게되죠.

	}
	return -1;




}



int main() {




	char arr[] = "ABABDDEF11ABC";
	char pattern[] = "ABC";
	printf("%d", searching(arr, pattern));

}
